<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="#F3EDEF"
    >

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#EAE9E0"
        android:gravity="right"
        android:paddingTop="40dp"
        android:textSize="@dimen/text_size"></TextView>

    <EditText
        android:id="@+id/islem"
        android:layout_width="match_parent"
        android:layout_height="148dp"
        android:background="#EAE9E0"
        android:gravity="right"
        android:inputType="numberDecimal"
        android:paddingTop="60dp"
        android:text="0"
        android:textSize="40sp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="635dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="95dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="0dp">

            <Button
                android:id="@+id/ac"
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:layout_weight="0"
                android:background="@drawable/button_islem"
                android:text="AC"
                android:textColor="@android:color/background_light"
                android:textSize="@dimen/text_size" />

            <Button
                android:id="@+id/arti_eksi"
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:layout_weight="0"
                android:background="@drawable/button_symbol"
                android:text="+/-"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_size" />

            <Button
                android:id="@+id/bolu"
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:layout_weight="0"
                android:background="@drawable/button_symbol"

                android:text="/"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_size" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/sil"
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:layout_weight="0"
                android:background="@drawable/button_symbol"
                android:src="@drawable/backspace32"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_size"></androidx.appcompat.widget.AppCompatImageButton>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="0dp">

            <Button
                android:id="@+id/yedi"
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:layout_weight="0"
                android:background="@drawable/button_shapee"
                android:text="7"
                android:textSize="@dimen/text_size" />

            <Button
                android:id="@+id/sekiz"
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:layout_weight="0"
                android:background="@drawable/button_shapee"
                android:text="8"
                android:textSize="@dimen/text_size" />

            <Button
                android:id="@+id/dokuz"
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:layout_weight="0"
                android:background="@drawable/button_shapee"
                android:text="9"
                android:textSize="@dimen/text_size" />

            <Button
                android:id="@+id/çarp"
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:layout_weight="0"
                android:background="@drawable/button_symbol"
                android:text="X"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_size" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="0dp">

            <Button
                android:id="@+id/dort"
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:layout_weight="0"
                android:background="@drawable/button_shapee"
                android:text="4"
                android:textSize="@dimen/text_size" />

            <Button
                android:id="@+id/bes"
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:layout_weight="0"
                android:background="@drawable/button_shapee"
                android:text="5"
                android:textSize="@dimen/text_size" />

            <Button
                android:id="@+id/alti"
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:layout_weight="0"
                android:background="@drawable/button_shapee"
                android:text="6"
                android:textSize="@dimen/text_size" />

            <Button
                android:id="@+id/eksi"
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:layout_weight="0"
                android:background="@drawable/button_symbol"
                android:text="-"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_size" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="0dp">

            <Button
                android:id="@+id/bir"
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:layout_weight="0"
                android:background="@drawable/button_shapee"
                android:text="1"
                android:textSize="@dimen/text_size" />

            <Button
                android:id="@+id/iki"
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:layout_weight="0"
                android:background="@drawable/button_shapee"
                android:text="2"
                android:textSize="@dimen/text_size" />

            <Button
                android:id="@+id/uc"
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:layout_weight="0"
                android:background="@drawable/button_shapee"
                android:text="3"
                android:textSize="@dimen/text_size" />

            <Button
                android:id="@+id/arti"
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:layout_weight="0"
                android:background="@drawable/button_symbol"
                android:text="+"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_size" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="0dp">

            <Button
                android:id="@+id/yüzde"
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:layout_weight="0"
                android:background="@drawable/button_shapee"
                android:text="%"
                android:textSize="@dimen/text_size" />

            <Button
                android:id="@+id/sifir"
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:layout_weight="0"
                android:background="@drawable/button_shapee"
                android:text="0"
                android:textSize="@dimen/text_size" />

            <Button
                android:id="@+id/virgül"
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:layout_weight="0"
                android:background="@drawable/button_shapee"
                android:text=","
                android:textSize="@dimen/text_size" />

            <Button
                android:id="@+id/esittir"
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:layout_weight="0"
                android:background="@drawable/button_islem"
                android:text="="
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_size" />
        </TableRow>

    </TableLayout>

</LinearLayout>